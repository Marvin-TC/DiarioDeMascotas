<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="30dp">

        <TextView
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="30dp"
            android:text="Nuevo Usuario"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nombre completo" />

        <EditText
            android:id="@+id/txt_nombre_completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tertiary"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textAlignment="textStart" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:inputType="textCapWords"
            android:layout_height="wrap_content"
            android:text="Apellidos" />

        <EditText
            android:id="@+id/txt_apellidos_completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tertiary"
            android:padding="10dp"
            android:textAlignment="textStart" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario:" />

        <EditText
            android:id="@+id/usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tertiary"
            android:hint="example@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Contrase単a:" />

        <EditText
            android:id="@+id/contrase単a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tertiary"
            android:hint="*****"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textAlignment="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="confirma tu contrase単a" />

        <EditText
            android:id="@+id/confirmar_contrase単a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tertiary"
            android:hint="*****"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textAlignment="center" />
        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Registrar Usuario" />
        <Button
            android:backgroundTint="@color/gray"
            android:id="@+id/btn_regresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>